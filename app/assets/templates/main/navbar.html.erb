<nav id="navbar" role="navigation">
  <div id="brand">
    <%= image_tag "logo.png", id: "logo"%>
  </div>

  <div id="school">
    <span id="school-name">{{ $root.university }}</span>
  </div>

  <div id="user-name" ng-show="$root.admin">
    <i class="fa fa-user"></i>
    <span>{{$root.accountEmail}}</span>
  </div>

  <div id="language-selection">
    <div dropdown-menu="ddSelectOptions" dropdown-model="ddSelectSelected" dropdown-onchange="changeLanguage('fr')">
      <span id="flag-img-container" ng-if="ddSelectSelected.value == 'en'">
        <%= image_tag "uk.png" %>
      </span>
      <span id="flag-img-container" ng-if="ddSelectSelected.value == 'fr'">
        <%= image_tag "fr.png"%>
      </span>
      <span class="fa fa-caret-down"></span>
    </div>
  </div>

</nav>
