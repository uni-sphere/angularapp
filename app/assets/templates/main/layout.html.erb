  <div id="demo-app-home" >
    <div ng-include="'home/demo-app-navbar.html'"></div>
    <dragndrop-view></dragndrop-view>

    <div id="main-view-container">

      <div id="view-tree">
        <collapsible-tree  node-end = 'nodeEnd' flat-data = 'nodes' active-nodes = 'activeNodes'></collapsible-tree>
