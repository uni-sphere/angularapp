<span us-spinner="{radius:50, width:12, length: 16, color: 'white', position: 'fixed', 'z-index': 999}" spinner-key="spinner-1"></span>

<div ng-if="home" id="home-container">
  <slide sandbox = 'sandbox' home = 'home'></slide>
</div>

