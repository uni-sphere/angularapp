  <admin-co ng-hide="admin" sandbox= 'sandbox' get-basic-info = 'getBasicInfo' admin = 'admin'></admin-co>

  <sidebar ng-show="admin" deconnection = 'deconnection' superadmin = 'superadmin'></sidebar>

  <div ui-view id="main-view-container"></div>

</div>



