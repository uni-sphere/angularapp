<div class="outer-modal-container ">
  <div class="modal-container modal-ready-to-appear">
    <div class="modal-header">
      <span class="modal-title">{{ 'SHARE' | translate }} {{itemTitle}}</span>
      <span class="fa fa-times close-modal" ng-click="dismissModal()"></span>
    </div>
    <div class="modal-body">
      <span id='share-link'>{{itemLink}}</span>
      <div class="modal-hint">{{ 'COPY' | translate }} <span class='like-keyboard'>Ctrl</span> + <span class='like-keyboard'>C</span></div>
    </div>
  </div>
</div>

<div class="modal-background"></div>
