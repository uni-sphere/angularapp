source 'https://rubygems.org'

ruby '2.1.2'

gem 'rails'

# server
gem 'puma'

#  logs
gem 'rails_12factor'

#  Asset pipeline
gem 'sprockets-rails', :require => 'sprockets/railtie'
gem 'uglifier'
gem 'sass-rails'

# front-end
gem 'font-awesome-rails'
gem 'autoprefixer-rails'
gem 'bower-rails'
gem 'angular-rails-templates'

# back-end
gem 'carrierwave'
gem 'fog'
gem 'aws-sdk'
gem 'rack-cors', require: 'rack/cors'
gem 'rest-client'
gem 'rails-i18n'
gem 'whenever', require: false
gem 'bcrypt'
gem 'omniauth'
gem 'devise_token_auth'
gem 'ng-rails-csrf'

group :development, :test do
  gem 'rspec-rails'
  gem 'guard-rspec'
  gem 'spring-commands-rspec'
  gem 'rb-fsevent'
end

# db
gem 'sqlite3'

# doc
gem 'railroady'

group :production do
  gem 'mysql'
end

